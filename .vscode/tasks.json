{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug; cd build; make",
            "problemMatcher": ["gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Release; cd build; make",
            "problemMatcher": ["gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}